<header
  id="header"
  class="w-full py-4 fixed top-0 z-50 transition duration-500"
  aria-label="Primary"
>
  <div
    class="container mx-auto px-4 flex justify-between items-center lg:px-24"
  >
    <a href="/" class="text-2xl font-black" aria-label="Go Home">AD.</a>
    <nav class="flex gap-4">
      <a href="/about" class="font-semibold hover:underline">About</a>
      <a href="/posts" class="font-semibold hover:underline">Blog</a>
    </nav>
  </div>
</header>

<script>
  window.onscroll = () => {
    if (document.documentElement.scrollTop > 20) {
      document.getElementById("header").classList.add("bg-white");
    } else {
      document.getElementById("header").classList.remove("bg-white");
    }
  };
</script>
