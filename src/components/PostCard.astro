---
import { Image } from "@astrojs/image/components";
const { frontmatter, url } = Astro.props;
const { title, description, date, author, image, tags } = frontmatter;
---

<article class="grid gap-1">
  <a href={url}>
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="webp"
      fit="cover"
      quality={80}
      aspectRatio="4:1"
      class="w-full"
    />
    <h2 class="text-2xl font-bold">{title}</h2>
  </a>

  <small>by {author} &middot; {date.slice(0, 10)}</small>

  <div class="space-x-2">
    {
      tags.map((tag) => (
        <small class="px-2 py-1 inline-block rounded bg-black">
          <a
            href={`/tags/${tag}`}
            class="before:content-['#'] font-semibold text-white hover:underline"
          >
            {tag}
          </a>
        </small>
      ))
    }
  </div>
</article>
