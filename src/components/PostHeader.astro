---
import { Image } from "@astrojs/image/components";
const { title, description, date, author, image, tags } = Astro.props;
---

<section class="pt-20 pb-8 bg-neutral-300">
  <div class="container mx-auto px-4 grid place-items-center gap-8 lg:px-24">
    <h1 class="text-6xl font-extrabold text-center">{title}</h1>

    {
      image && (
        <Image
          src={image.src}
          alt={image.alt}
          width={600}
          height={300}
          format="webp"
          fit="cover"
          class="w-full max-w-[50rem]"
        />
      )
    }
  </div>
</section>
